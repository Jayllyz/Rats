<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/reportTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textSize="20sp"
        android:textColor="@color/md_theme_onSurface"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constrainedWidth="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/reportType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textColor="@color/md_theme_tertiary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/reportTitle"
        app:layout_constraintTop_toBottomOf="@+id/reportTitle"/>

    <TextView
        android:id="@+id/reportDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textSize="16sp"
        android:layout_marginEnd="16sp"
        android:textColor="@color/md_theme_tertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/reportTitle" />

    <TextView
        android:id="@+id/reportContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textSize="14sp"
        android:textColor="@color/md_theme_tertiary"
        app:layout_constraintTop_toBottomOf="@id/reportType"
        app:layout_constraintStart_toStartOf="@+id/reportTitle"
        android:layout_marginHorizontal="32dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="4dp" />

    <View
        android:id="@+id/bottomBorder"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/md_theme_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>