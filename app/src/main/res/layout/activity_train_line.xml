<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.TrainLineActivity">

    <ImageView
        android:id="@+id/follow_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/follow_line_icon"
        android:contentDescription="@string/follow_icon"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
    android:layout_marginTop="24dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/title_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/train_icon_sample"
        android:contentDescription="@string/train_icon"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/train_title"
        app:layout_constraintEnd_toStartOf="@id/train_title"
        android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/train_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/train_name_sample_alert"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textColor="@color/md_theme_onSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Traffic State Section (Icon + Text) -->
        <ImageView
            android:id="@+id/trafficStateIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/safe_notification"
        android:contentDescription="@string/icon_alert"
            android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/train_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/trafficStateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/line_status_sample"
            android:textSize="16sp"
            android:textColor="@color/md_theme_onSurface"
            app:layout_constraintStart_toEndOf="@id/trafficStateIcon"
            app:layout_constraintTop_toTopOf="@id/trafficStateIcon"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/alertSectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alerts_title_sample"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/trafficStateIcon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_wagon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/item_alert_train_view_holder"
        app:layout_constraintTop_toBottomOf="@id/alertSectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_bottom_navigation" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_bottom_navigation"
        android:name="com.rats.ui.fragments.BottomMenuFragment"
        android:layout_width="0dp"
        android:layout_height="64dp"
        tools:layout="@layout/fragment_bottom_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
