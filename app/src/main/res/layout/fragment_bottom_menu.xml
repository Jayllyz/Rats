<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_menu" />

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:background="@color/md_theme_primary"
        android:elevation="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <LinearLayout
            android:id="@+id/menu_report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/menu_report_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/menu_report_icon_text"
                android:src="@drawable/camera_icon"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/menu_report_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_report_text"
                android:textSize="10sp"
                android:textColor="@color/text_primary"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/menu_map_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/menu_map_icon_text"
                android:src="@drawable/stations_icon"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/menu_map_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_map_text"
                android:textSize="10sp"
                android:textColor="@color/text_primary"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_wagon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/menu_wagon_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/menu_wagon_icon"
                android:src="@drawable/wagon_icon"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/menu_wagon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_wagon_text"
                android:textSize="10sp"
                android:textColor="@color/text_primary"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/menu_chat_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/menu_chat_icon"
                android:src="@drawable/chat"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/menu_chat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_chat_text"
                android:textSize="10sp"
                android:textColor="@color/text_primary"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/menu_more_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/menu_more_icon_text"
                android:src="@drawable/burger_menu"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/menu_more_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_more_text"
                android:textSize="10sp"
                android:textColor="@color/text_primary"
                tools:ignore="SmallSp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>